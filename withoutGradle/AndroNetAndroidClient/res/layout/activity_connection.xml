<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/connection_name_layout"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center">
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/type_name"
              android:textSize="@dimen/text_30"
              android:textColor="@color/text_gray"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:weightSum="3"
                  android:gravity="center_horizontal">
        <EditText android:id="@+id/connection_ip"
                  style="@style/ConnectEditText"
                  android:layout_weight="1.5"/>
        <EditText android:id="@+id/connection_port"
                  style="@style/ConnectEditText"
                  android:layout_weight="0.5"/>
    </LinearLayout>
    <Button android:id="@+id/connect_button"
            style="@style/BlueButton"
            android:text="@string/connect"
            android:layout_marginTop="@dimen/chat_name_button_marginTop"/>
</LinearLayout>